# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/plumelive
DB_HOST=localhost
DB_PORT=5432
DB_NAME=plumelive
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Settings
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_here_change_in_production
JWT_REFRESH_EXPIRATION=30d

# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@plumelive.com
EMAIL_FROM_NAME=PlumelLive

# File Upload Settings
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.xls,.xlsx,.zip
UPLOAD_DIR=./uploads
UPLOAD_URL=http://localhost:4000/uploads

# Optional: Cloud Storage (if using S3 or similar)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your_bucket_name

# Logging
LOG_LEVEL=info
